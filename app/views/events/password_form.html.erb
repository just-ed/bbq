<h1>Доступ только по пин-коду</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_tag('', method: 'post') do %>
      <div class="form-group">
        <%= label 'Пин-код', :pincode %>
        <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
      </div>

      <div class="actions">
        <%= submit_tag 'Отправить', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to 'На главную', events_path %>
  </div>
</div>
