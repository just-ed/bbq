<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: 'avatar-rounded my-3' %>

  <% if @user == current_user %>
    <p>
      <%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-link' %>
    </p>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3>Организовал:</h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p>Пользователь пока не организовал ни одного события</p>
    <% end %>
  </div>
</div>
