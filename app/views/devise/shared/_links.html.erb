<div>
  <% unless controller_name == 'sessions' %>
    <%= link_to 'Войти', new_session_path(resource_name) %>
  <% end %>
</div>

<div>
  <% unless controller_name == 'registrations' %>
    <%= link_to 'Зарегистрироваться', new_registration_path(resource_name) %>
  <% end %>
</div>

<div>
  <% unless controller_name == 'passwords' && controller_name == 'registrations' %>
    <%= link_to 'Забыли пароль?', new_password_path(resource_name) %>
  <% end %>
</div>

<div>
  <% if devise_mapping.omniauthable? %>
    Войти с помощью:
    <%= link_to fa_icon('vk'), user_vkontakte_omniauth_authorize_path, class: 'fa-lg' %>
    <%= link_to fa_icon('facebook'), user_facebook_omniauth_authorize_path, class: 'fa-lg' %>
  <% end %>
</div>
