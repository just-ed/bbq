<h2>Вход</h2>

<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), validate: true) do |f| %>
      <div class="form-group">
        <%= f.input :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.input :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.button :submit, "Войти", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
