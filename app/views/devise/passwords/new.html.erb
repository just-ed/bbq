<h2>Забыли пароль?</h2>

<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, validate: true) do |f| %>

      <div class="form-group">
        <%= f.input :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Выслать новый пароль", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
