<h2>Регистрация</h2>

<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
      <div class="input-group-lg">
        <%= f.input :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="input-group-lg">
        <%= f.input :password, autocomplete: "new-password", class: "form-control",
                    hint: "не менее #{@minimum_password_length} символов" %>
      </div>

      <div class="input-group-lg">
        <%= f.input :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.button :submit, "Зарегистрироваться", class: 'mb-3 btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
