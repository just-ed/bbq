<h2>Изменить пароль</h2>

<%= render partial: 'partials/form_errors', locals: {model: @user} %>

<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "Новый пароль" %>
        <% if @minimum_password_length %>
          <em>(не менее <%= @minimum_password_length %> символов)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Подтвердите новый пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions buffer-both">
        <%= f.submit "Изменить пароль", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
